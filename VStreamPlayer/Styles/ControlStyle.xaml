    <Style x:Key="PlayPauseToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Width" Value="14" />
        <Setter Property="Height" Value="14" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource FunctionalityButtonForeColor}" />

        <Style.Triggers>
            <!--  Pause status  -->
            <Trigger Property="IsChecked" Value="False">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border
                                Width="{TemplateBinding Width}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0">
                                <ContentControl>
                                    <Viewbox>
                                        <Path
                                            Width="{TemplateBinding Width}"
                                            Height="{TemplateBinding Height}"
                                            Data="M50,169.76 L50,204.01999 79.5,186.64816 z"
                                            Fill="{TemplateBinding Foreground}"
                                            Stretch="Fill" />
                                    </Viewbox>
                                </ContentControl>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource FunctionalityButtonForeColorOnMouseOver}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>

            <!--  Play status  -->
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border
                                Width="{TemplateBinding Width}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0">
                                <ContentControl>
                                    <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                        <Grid ClipToBounds="False">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <Line
                                                Stroke="{TemplateBinding Foreground}"
                                                StrokeEndLineCap="Round"
                                                StrokeStartLineCap="Round"
                                                StrokeThickness="3"
                                                X1="0.5"
                                                X2="0.5"
                                                Y1="0"
                                                Y2="14" />
                                            <Line
                                                Grid.Column="1"
                                                Stroke="{TemplateBinding Foreground}"
                                                StrokeEndLineCap="Round"
                                                StrokeStartLineCap="Round"
                                                StrokeThickness="3"
                                                X1="7"
                                                X2="7"
                                                Y1="0"
                                                Y2="14" />
                                        </Grid>
                                    </Viewbox>
                                </ContentControl>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource FunctionalityButtonForeColorOnMouseOver}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

